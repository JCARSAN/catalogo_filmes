<section class="container">
    <h1><%= @director.name %></h1>
    <div class="content">
        <h2>Dados Pessoais</h2>
        <% if !@director.photo.file.nil? %>
            <%= image_tag @director.photo.url %>
        <% else %>
            <%= image_tag image_path("image-not-found.png") %>
        <% end %>
        <p><span>Data de nascimento: </span><%= @date_formatted %></p>
        <p><span>Nacionalidade: </span><%= @director.nationality %></p>
        <p><span>Gênero favorito: </span><%= @genre_name %></p>
    </div>
    <h2>Filmografia</h2>
    <ul class="section-grid">
        <% @films.each do |film| %>
            <li class="box">
                <% if !film.poster_photo.file.nil? %>
                    <%= image_tag film.poster_photo.url %>
                <% else %>
                    <%= image_tag image_path("image-not-found.png") %>
                <% end %>
                <%= link_to film.title, film_path(film.id) %>
                <p>Lançamento: <%= film.year_published %></p>
            </li>
        <% end %>
    </ul>
    <div class="links-wrapper">
        <div class="flex-container back-button">
            <%= link_to "Home", root_path %>
        </div>
        <div class="flex-container edit-button">
            <%= link_to "Editar", edit_director_path(@director.id) %>
        <div class="flex-container edit-button">
    </div>
</section>